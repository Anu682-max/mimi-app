# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Region Configuration
REGION=us-east
DEFAULT_LOCALE=en

# Database
MONGODB_URI=mongodb://localhost:27017/indate
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# AI Services
OPENAI_API_KEY=your-openai-api-key
TRANSLATION_PROVIDER=openai

# Media Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=indate-media
AWS_REGION=us-east-1

# Push Notifications (Web Push)
# Generate keys with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:admin@indate.com

# Admin API Key (for internal notification sending)
ADMIN_API_KEY=your-admin-api-key

# Feature Flags
CHAT_TRANSLATION_ENABLED=true
AI_MATCHING_ENABLED=true
VIDEO_PROFILE_ENABLED=true
VERIFICATION_REQUIRED=false

# Local Development (set to true to skip MongoDB)
USE_MOCK_DB=true
